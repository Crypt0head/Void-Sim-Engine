{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ сборка Main",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-v",
                "${workspaceFolder}/source/*",
                "-o",
                "${workspaceFolder}/bin/main.out",
                "-lboost_program_options",
                "-lpthread"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Задача создана отладчиком."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: clang build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "-v",
                "${file}",
                "-o",
                "${workspaceFolder}/bin/${fileBasenameNoExtension}.out",
                "-std=c++20",
                "-lboost_program_options",
                "-lpthread"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ сборка TESTS",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-v",
                "${workspaceFolder}/source/V*",
                "${workspaceFolder}/tests/*.cpp",
                "-o",
                "${workspaceFolder}/bin/test.out",
                "-lboost_program_options",
                "-lpthread"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Задача создана отладчиком."
        },
    ],
    "version": "2.0.0"
}